<Page x:Class="CampaignEditor.Helpers.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CampaignEditor.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="LoadingPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbMessage" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Text="LOADING..." Foreground="Black" FontSize="60"
                   HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                   TextAlignment="Center">
        </TextBlock>
        <ProgressBar x:Name="pbBar" Grid.Row="2" Grid.Column="1" Visibility="Collapsed"/>
    </Grid>
</Page>
