<Window x:Class="CampaignEditor.NewCampaign"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampaignEditor"
        mc:Ignorable="d"
        Title="NewCampaign" Height="250" Width="550" FontSize="22" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lblName" Content="Campaign name" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <TextBox x:Name="tbName" TextWrapping="Wrap" Text=""
                 Width="450"
                 HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="0,70,0,0" />
        <Label x:Name="lblError" Content="" Foreground="Red" HorizontalContentAlignment="Center"
               Width="450"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>
        <Button x:Name="btnSave" Content="Save" 
                Width="100"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,10" Click="btnSave_Click" />
        <Button x:Name="btnCancel" Content="Cancel" 
                Width="100"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,10" Click="btnCancel_Click"/>

    </Grid>
</Window>
