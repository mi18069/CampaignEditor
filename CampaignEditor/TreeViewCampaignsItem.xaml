<UserControl x:Class="CampaignEditor.TreeViewCampaignsItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignEditor"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Grid Background="White">
        <TextBox x:Name="tbName" Text="Name" FontSize="22" FontWeight="DemiBold"
                 BorderThickness="0"
                 Width="780"
                 HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10,10,0,0"  
                 TextWrapping="NoWrap" IsReadOnly="True"/>
        <Label  x:Name="lblDescription" Content="Description" FontSize="16" FontWeight="Light"              
               Width="480"
               HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="7,0,0,10" />

    </Grid>
</UserControl>
