<Window x:Class="CampaignEditor.Cobranding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampaignEditor"
        mc:Ignorable="d"
        Title="Cobranding" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgGrid" Grid.Row="0" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Channel" Binding="{Binding Channel.chname}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <!-- Other columns will be added dynamically in the code-behind -->
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnClose" Grid.Row="1" Content="Close" 
                Width="100" Height="40"
                Margin="10" HorizontalAlignment="Right"
                Click="btnClose_Click"/>
    </Grid>
</Window>
