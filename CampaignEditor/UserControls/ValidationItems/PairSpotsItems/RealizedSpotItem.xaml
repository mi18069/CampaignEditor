<UserControl x:Class="CampaignEditor.UserControls.ValidationItems.PairSpotsItems.RealizedSpotItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignEditor.UserControls.ValidationItems.PairSpotsItems"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400" d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="lblSpot" Grid.Column="1" Grid.Row="0" FontWeight="Bold"/>
        <Label x:Name="lblSpotlength" Grid.Column="1" Grid.Row="1"/>
        <ComboBox x:Name="cbAssignedSpot" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"
                  Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
