<UserControl x:Class="CampaignEditor.UserControls.ValidationItems.PairSpotsItems.EqualSpotsItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignEditor.UserControls.ValidationItems.PairSpotsItems"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="850" d:Background="White"
             BorderThickness="2" BorderBrush="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="spExpectedSpots" Grid.Column="0"/>
        <Line Grid.Column="1" Stroke="Black" StrokeThickness="2"/>
        <StackPanel x:Name="spRealizedSpots" Grid.Column="2"/>
    </Grid>
</UserControl>
