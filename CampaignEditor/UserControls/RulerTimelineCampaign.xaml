<UserControl x:Class="CampaignEditor.UserControls.RulerTimelineCampaign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignEditor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cbChannels" Grid.Row="0" Grid.Column="0" FontSize="15" FontWeight="Bold"
                    VerticalAlignment="Top" HorizontalAlignment="Stretch"
                  SelectionChanged="cbChannels_SelectionChanged"/>
        <ComboBox x:Name="cbDates" Grid.Row="0" Grid.Column="1" FontSize="15" FontWeight="Bold"
                  VerticalAlignment="Top" HorizontalAlignment="Stretch"
                  SelectionChanged="cbDates_SelectionChanged"/>
        <local:RulerTimeline x:Name="rulerTimeline" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
