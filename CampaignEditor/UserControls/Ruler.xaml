<UserControl x:Class="CampaignEditor.UserControls.Ruler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignEditor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="150" d:Background="White">
    <Grid>
        <Border x:Name="bRuler" BorderBrush="Black" BorderThickness="2" />
        <StackPanel x:Name="spRuler" Margin="0, 10, 0, 10" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
