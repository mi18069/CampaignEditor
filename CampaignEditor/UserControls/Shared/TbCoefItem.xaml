<UserControl x:Class="CampaignEditor.UserControls.Shared.TbCoefItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignEditor.UserControls.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="80" Background="White"
             Width="80">
    <Grid>
        <Border x:Name="border" BorderBrush="Red" BorderThickness="0">
            <TextBox x:Name="tbCoef" MaxLength="6"
                 VerticalAlignment="Stretch" VerticalContentAlignment="Center" 
                 HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                 
                     GotKeyboardFocus="tbCoef_GotKeyboardFocus"
                     LostKeyboardFocus="tbCoef_LostKeyboardFocus"/>
        </Border>
        
    </Grid>
</UserControl>
