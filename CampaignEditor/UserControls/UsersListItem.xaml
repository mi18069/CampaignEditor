<UserControl x:Class="CampaignEditor.UsersListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CampaignEditor"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="600">
    <Grid Background="White">
        <Image x:Name="imgUserIcon" 
               Width="80" Height="70"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0"/>
        <Label x:Name="lblUsername" Content="Username" FontWeight="Bold"
               Width="200"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,0,0,0"/>
        <Label x:Name="lblUserLevel" Content="User level" FontStyle="Italic"
               Width="100"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="320,0,0,0"/>
        <Button x:Name="btnUnassign" Background="White" BorderThickness="0"
                Width="25" Height="25"
                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,50,0" Click="btnUnassign_Click"/>
    </Grid>
</UserControl>
