<Page x:Class="CampaignEditor.UserControls.CampaignForecast"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CampaignEditor.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="CampaignForecast" Background="White">

    <Grid>
        <Grid x:Name="gridInit" Visibility="Hidden" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                   Content="Use data within range" 
                   FontSize="40" HorizontalAlignment="Center"/>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" 
                   Content="From" FontSize="30" 
                   VerticalAlignment="Center"/>
                <DatePicker x:Name="dpFrom" Grid.Column="1"
                        VerticalAlignment="Center">
                    <DatePicker.LayoutTransform>
                        <ScaleTransform ScaleX="2.3" ScaleY="2.3" />
                    </DatePicker.LayoutTransform>
                </DatePicker>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" 
                       Content="To" FontSize="30" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
                <DatePicker x:Name="dpTo" Grid.Column="1"
                            VerticalAlignment="Center">
                    <DatePicker.LayoutTransform>
                        <ScaleTransform ScaleX="2.3" ScaleY="2.3" />
                    </DatePicker.LayoutTransform>
                </DatePicker>
            </Grid>
            <Button x:Name="Init" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                    Content="Initialize" FontSize="20" Margin="10" Width="100"
                    HorizontalAlignment="Right"
                    Click="Init_Click"/>
        </Grid>
        <Grid x:Name="gridForecast" Visibility="Visible" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <ListView x:Name="lvChannels" Grid.Row="1" Grid.Column="1" 
                      DisplayMemberPath="chname" MinWidth="250" MinHeight="250"
                      SelectionMode="Multiple" Margin="0, 0 ,10,0"
                      SelectionChanged="lvChannels_SelectionChanged"/>
            <ScrollViewer  Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" Grid.ColumnSpan="3"
                           VerticalScrollBarVisibility="Visible">
                <DataGrid x:Name="dgSchema" 
                          FontSize="13" AlternatingRowBackground="Gray"
                          CanUserAddRows="False"
                          AutoGenerateColumns="False"
                          SelectionMode="Single">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="1,1,1,2"/>
                            <Setter Property="BorderBrush" Value="black"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Program" Binding="{Binding Item1.name, Mode=TwoWay}"
                                        IsReadOnly="True" />
                        <DataGridTextColumn Header="Position" Binding="{Binding Item1.position, Mode=TwoWay}"
                                        IsReadOnly="True"/>
                        <DataGridTextColumn Header="Start time" Binding="{Binding Item1.stime, Mode=TwoWay}" 
                                        IsReadOnly="True"/>
                        <DataGridTextColumn Header="End time" Binding="{Binding Item1.etime, Mode=TwoWay}" 
                                        IsReadOnly="True"/>
                        <DataGridTextColumn Header="AMR Sale" 
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="AMR Sale Trim" 
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Affinity" 
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Coef SP1" 
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Coef SP2" 
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="CPP" 
                                            IsReadOnly="True"/>
                    </DataGrid.Columns>
                    <DataGrid.FrozenColumnCount>10</DataGrid.FrozenColumnCount>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
