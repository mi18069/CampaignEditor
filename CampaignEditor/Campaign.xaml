<Window x:Class="CampaignEditor.Campaign"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampaignEditor.Converters"
        mc:Ignorable="d"
        Title="Campaign" 
        Height="750" Width="1200" MinWidth="1000" MinHeight="700">
    <Window.Resources>
        <local:ToHalfConverterM4 x:Key="toHalfConverter" />
    </Window.Resources>
    <Grid>
        <TabControl x:Name="tcTabs" SizeChanged="tcTabs_SizeChanged" >
            <TabItem x:Name="tiOverview" Header="Overview"
                     Height="50"  Width="{Binding ElementName=tcTabs, Path=ActualWidth, Converter={StaticResource toHalfConverter}}"/>
            <TabItem x:Name="tiForecast" Header="Forecast" Width="{Binding ElementName=tcTabs, Path=ActualWidth, Converter={StaticResource toHalfConverter}}"
                     Height="50"/>
        </TabControl>
    </Grid>
</Window>
