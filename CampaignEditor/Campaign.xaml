<Window x:Class="CampaignEditor.Campaign"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampaignEditor.Converters"
        mc:Ignorable="d"
        Title="Campaign" 
        Height="750" Width="1200" MinWidth="1000" MinHeight="700"
        Closing="Window_Closing">
    <Window.Resources>
        <local:ToThirdConverterM4 x:Key="toThirdConverter" />
    </Window.Resources>
    <Grid>
        <TabControl x:Name="tcTabs" SelectionChanged="tcTabs_SelectionChanged" >
            <TabItem x:Name="tiOverview" Header="Overview"
                     Height="50"  Width="{Binding ElementName=tcTabs, Path=ActualWidth, Converter={StaticResource toThirdConverter}}"/>
            <TabItem x:Name="tiForecast" Header="Forecast" Width="{Binding ElementName=tcTabs, Path=ActualWidth, Converter={StaticResource toThirdConverter}}"
                     Height="50"/>
            <TabItem x:Name="tiValidation" Header="Validation" Width="{Binding ElementName=tcTabs, Path=ActualWidth, Converter={StaticResource toThirdConverter}}"
                     Height="50" />
        </TabControl>
    </Grid>
</Window>
