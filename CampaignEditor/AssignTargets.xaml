<Window x:Class="CampaignEditor.AssignTargets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampaignEditor"
        mc:Ignorable="d"
        Title="AssignTargets" Height="450" Width="800">
    <Viewbox>
        <Grid Width="800" Height="450">
            <Border BorderBrush="Gray" BorderThickness="1"
            Width="300" Height="400" 
             HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10, 0, 0, 0">
                <ListView x:Name="lbTargets"
                      ItemsSource="{Binding TargetsList}"
                      DisplayMemberPath="targname"
                          SelectionMode="Single"
                      SelectionChanged="lb_SelectionChanged"
                          GotFocus="lb_GotFocus">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="PreviewMouseUp" Handler="TargetsItem_PreviewMouseUp"/>
                            <EventSetter Event="MouseDoubleClick" Handler="TargetsItem_MouseDoubleClick"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding targown}" Value="0">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </Border>
            <Button x:Name="btnToSelected" Background="White"
                Width="100" Height="40"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 80, 0, 0"
                Click="btnToSelected_Click">
                <Image Source="{StaticResource right_arrow_icon}"></Image>
            </Button>
            <Button x:Name="btnFromSelected" Background="White"
                Width="100" Height="40"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 140, 0, 0"
                Click="btnFromSelected_Click">
                <Image Source="{StaticResource left_arrow_icon}"></Image>
            </Button>
            <Button x:Name="btnNewTarget" Background="White"
                Width="100" Height="40"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 250, 0, 0"
                Click="btnNewTarget_Click">
                <Image Source="{StaticResource plus_icon}"></Image>
            </Button>
            <Button x:Name="btnEditTarget" Background="White"
                Width="100" Height="40"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 310, 0, 0"
                IsEnabled="False"
                Click="btnEditTarget_Click">
                <Image Source="{StaticResource edit_icon}"></Image>
            </Button>
            <Border BorderBrush="Gray" BorderThickness="1"
            Width="300" Height="100" 
             HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 15, 10, 0">
                <ListView x:Name="lbSelectedTargets" 
                      ItemsSource="{Binding SelectedTargetsList}"
                      DisplayMemberPath="targname" AllowDrop="True"
                          SelectionMode="Single"
                          SelectionChanged="lb_SelectionChanged"
                          GotFocus="lb_GotFocus">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="PreviewMouseUp"  Handler="SelectedTargetsItem_PreviewMouseUp"/>
                            <EventSetter Event="PreviewMouseMove" Handler="ListViewItem_PreviewMouseMove"/>
                            <EventSetter Event="Drop" Handler="ListViewItem_Drop"/>
                            <EventSetter Event="MouseDoubleClick" Handler="SelectedTargetsItem_MouseDoubleClick"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding targown}" Value="0">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>
            <Border BorderBrush="Gray" BorderThickness="1"
            Width="300" Height="200" 
            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 150, 10, 0">
            <TextBlock x:Name="tbDescription" Foreground="Gray" FontSize="18" TextWrapping="Wrap"/>
            </Border>
            <Button x:Name="btnSave" Content="Assign"
                Width="100" Height="40"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 10, 10"
                Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel"
                Width="100" Height="40"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 150, 10"
                Click="btnCancel_Click"/>
        </Grid>
    </Viewbox>
</Window>
