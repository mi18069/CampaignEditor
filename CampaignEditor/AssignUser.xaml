<Window x:Class="CampaignEditor.AssignUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampaignEditor"
        mc:Ignorable="d"
        Title="AssignUser" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <ComboBox x:Name="cbRemainingUsers" 
                  Width="220"
                  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />
        <Button x:Name="btnAssign" Content="Assign"
                Width="70" Height="30"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,20" Click="btnAssign_Click"/>
    </Grid>
</Window>
