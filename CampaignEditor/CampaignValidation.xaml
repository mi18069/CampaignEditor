<Page x:Class="CampaignEditor.CampaignValidation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CampaignEditor.UserControls.ValidationItems"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" d:Background="White"
      Title="CampaignValidation" >
    <Page.Resources>
        <local:ValidationStack x:Key="ValidationStack"/>
    </Page.Resources>
    <Grid>
        <Grid x:Name="gridNotInitialized">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Label x:Name="lblMessage" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Content="Channels not initialized" FontSize="40" Foreground="Black"/>
            <Button x:Name="btnReload" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Width="200" Height="50" Content="Reload" Click="btnReload_Click"/>
        </Grid>
        <Grid x:Name="gridValidation" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Grid.Column="1" Margin="0, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="btnCheckRealized" Grid.Column="1"
                        Width="100" Content="Check new data" Click="btnCheckRealized_Click"/>
                <Button x:Name="btnPrint" Grid.Column="2" Content="Export"
                        Width="70" Click="btnPrint_Click"/>
            </Grid>
            
            <local:ValidationStack x:Name="validationStack" Grid.Row="2" Grid.Column="1"/>

            <ListBox x:Name="lbChannels" Grid.Column="1" Grid.Row="3" DisplayMemberPath="chname"
                      HorizontalAlignment="Left" HorizontalContentAlignment="Left"
                      SelectionChanged="lbChannels_SelectionChanged" MaxHeight="150"
                     SelectionMode="Multiple" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Page>
